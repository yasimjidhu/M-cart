
<%- include('partials/header') %> 

<!--Navbar-->

<%-include('partials/navbar') %>






<% if ( Products &&  Products.length > 0) { %>
  <h2 class="text-center mt-3">Search Results for <span class="text-danger"> "<%= searchItem %>"</span></h2>
  <div class="row mt-5">
    <% Products.forEach(function(product) { %>
      <div class="col-lg-3 col-md-6 mb-4">
        <div class="card">
          <a href="/productview/<%= product._id %>"><img  class="card-img-top search-img" src="/uploads/<%=product.image[4] %>" alt=""></a>
          <div class="card-body">
            <h5 class="card-title" style="font-size: 20px;"><%= product.productName %></h5>
            <p class="card-text" style="font-size: 23px;color: rgb(182, 2, 2);">$<%= product.price %></p>
          </div>
        </div>
      </div>
    <% }); %>
  </div>
<% } else { %>
  <div class="col-lg-12 d-flex justify-content-center">
    <img src="/images/theme/noData.jpg" alt="" width="50%">
  </div>
<h3 class="text-center text-danger">No Product Found</h3>
<% } %>
