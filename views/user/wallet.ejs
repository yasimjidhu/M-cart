<!--header-->
<%- include('../user/partials/header') %> 
<%- include('../user/partials/links') %>
<!--Navbar-->
<%- include('../user/partials/navbar') %>

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">

<style>
  body {
      background-color: #f8f9fa;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
  }
  .wallet-container {
      max-width: 1000px;
      margin: 2rem auto;
      background-color: #fff;
      border-radius: 15px;
      box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
      overflow: hidden;
  }
  .wallet-header {
      background: linear-gradient(135deg, #007bff, #6610f2);
      color: white;
      padding: 2rem;
      text-align: center;
  }
  .wallet-balance {
      font-size: 2.5rem;
      font-weight: bold;
      margin-bottom: 0.5rem;
  }
  .balance-label {
      font-size: 1rem;
      opacity: 0.8;
  }
  .transaction-history {
      padding: 2rem;
  }
  .transaction-item {
      background-color: #f8f9fa;
      border-radius: 10px;
      padding: 1rem;
      margin-bottom: 1rem;
      transition: all 0.3s ease;
  }
  .transaction-item:hover {
      transform: translateY(-3px);
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
  }
  .transaction-amount {
      font-weight: bold;
      font-size: 1.1rem;
  }
  .transaction-date {
      font-size: 0.9rem;
      color: #6c757d;
  }
  .credit {
      color: #28a745;
  }
  .debit {
      color: #dc3545;
  }
  .no-wallet {
      text-align: center;
      padding: 3rem;
  }
  .no-wallet img {
      max-width: 300px;
      margin-bottom: 1rem;
  }
</style>

<div class="container-fluid">
  <div class="row">
      <div class="col-lg-2 p-0">
          <!-- Sidebar -->
          <%- include('../user/partials/sidebar') %>
      </div>
      <div class="col-lg-10 p-0">
          <% if(typeof userWallet !== 'undefined' && userWallet){ %>
              <div class="wallet-container">
                  <div class="wallet-header">
                      <div class="wallet-balance">₹ <%= userWallet.balance.toFixed(2) %></div>
                      <div class="balance-label">Available Balance</div>
                  </div>
                  <div class="transaction-history">
                      <h3 class="mb-4 text-center">Transaction History</h3>
                      <% userWallet.transactions.forEach(transaction => { %>
                          <div class="transaction-item d-flex justify-content-between align-items-center">
                              <div>
                                  <div class="fw-bold"><%= transaction.from %></div>
                                  <div class="transaction-date"><%= new Date(transaction.date).toLocaleString() %></div>
                              </div>
                              <div class="transaction-amount <%= transaction.transactionType === 'credit' ? 'credit' : 'debit' %>">
                                  <%= transaction.transactionType === 'credit' ? '+' : '-' %>₹ <%= transaction.amount.toFixed(2) %>
                              </div>
                          </div>
                      <% }); %>
                  </div>
              </div>
          <% } else { %>
              <div class="no-wallet">
                  <img src="/images/theme/noData.jpg" alt="No Wallet" class="img-fluid">
                  <h3 class="text-danger">You don't have a wallet at this time</h3>
              </div>
          <% } %>
      </div>
  </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>

