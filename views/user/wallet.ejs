<!--header-->
<%- include('../user/partials/header') %> 
<%- include('../user/partials/links') %>
<!--Navbar-->
<%- include('../user/partials/navbar') %>
  <style>
    .wallet-container {
      max-width: 800px;
      margin: 0 auto;
      background-color: #fff;
      border-radius: 8px;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
      padding: 20px;
    }
    .wallet-header {
      text-align: center;
      margin-bottom: 20px;
    }
    .wallet-balance {
      font-size: 24px;
      margin-bottom: 20px;
    }
    .transaction-history {
      border-top: 1px solid #ccc;
      margin-top: 30px;
    }
    .transaction-item {
      padding: 10px;
      border-bottom: 1px solid #eee;
    }
    .deposit-withdraw-form {
      margin-top: 30px;
    }
    .form-group {
      margin-bottom: 15px;
    }
    .form-group label {
      display: block;
      font-weight: bold;
    }
    .form-group input[type="number"] {
      width: 100%;
      padding: 8px;
      border-radius: 4px;
      border: 1px solid #ccc;
    }
    .btn {
      padding: 10px 20px;
      border: none;
      border-radius: 4px;
      cursor: pointer;
      color: #fff;
      background-color: #007bff;
    }
  </style>

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-2 p-0">
                 <!-- Sidebar -->
        <%- include('../user/partials/sidebar') %>
        </div>
      <!-- HTML content to display wallet details -->
    <div class="col-lg-10 p-0">
      <% if(userWallet){ %>
        <section class="h-100 gradient-custom shadow">
            <!-- ... -->
            <div class="card shadow" style="border-radius: 10px;">
                <div class="card-header px-4 py-5 w-100">
                    <h5 class=" mb-0" style="color: rgb(3, 111, 212);"><b>Available Balance, <%= userWallet.balance.toFixed(2) %></b></h5>
                </div>
                <div class="card-body w-100">
                    <h3 class="card-subtitle mb-2 text-muted text-center"><b>Wallet History</b></h3>
                    <hr>
                    <% userWallet.transactions.forEach(transaction => { %>
                        <div class="d-flex justify-content-between w-100">
                            <strong class="text-primary text-bold mb-0 w-25"><%= transaction.from %></strong>
                            <p class="text-muted mb-0" style="color: <%= transaction.transactionType === 'credit' ? 'green' : 'red'; %> !important; font-weight: bold; font-size: 1.2em; width: 100px;">
                                <% if (transaction.transactionType === 'credit') { %>
                                    +<%= transaction.amount %>
                                <% } else if (transaction.transactionType === 'debit') { %>
                                    -<%= transaction.amount.toFixed(2) %>
                                <% } %>
                            </p>
                            <p class="text-muted mb-0"><%= new Date(transaction.date).toLocaleString() %></p>
                        </div>
                        <hr>
                    <% }); %>
                </div>
            </div>
        </section>

      <% }else { %>
        <div class=" text-center">
          <img src="/images/theme/noData.jpg" alt="" width="50%">
          <br>
          <h3 style="color: red;">You dont have wallet at this time</h3>
        </div>
     <%  } %>
    </div>

    </div>
</div>


