<!--header-->

<%- include('../user/partials/header') %>
<%- include('../user/partials/links') %>
    <!--Navbar-->
<%-include('../admin/partials/nav') %>

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-2 p-0">
            <%-include('../admin/partials/sidebar') %>
        </div>
        <div class="col-lg-10">
            <% if(usersFeedbacks && usersFeedbacks.length > 0){ %>
                <h3 class="text-center text-info mt-3">All Feedbacks</h3>
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">Image</th>
                            <th scope="col">Name</th>
                            <th scope="col">Sent Date</th>
                            <th scope="col">subject</th>
                            <th scope="col">message</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% usersFeedbacks.forEach(feedback =>{ %>
                            <% feedback.userFeedback.forEach(user =>{ %>
                                <tr>
                                    <td>
                                        <% if(user.profileImage){ %>
                                            <img src="/uploads/profile_images/<%= user.profileImage %>" class="card-img" alt="..." style="width: 70px;">
                                        <% }else{ %>
                                            <img src="/images/theme/noimage.jpg" alt="" style="width: 70px;">
                                        <% } %>
                                    </td>
                                    <td><%= user.name.toUpperCase() %></td>
                                    <td>
                                        <% feedback.allFeedbacks.forEach((individualFeedback,index) => { %>
                                            <div>
                                                <%if(index >0){ %>
                                                    <hr>
                                                <% } %>
                                                <p><%= individualFeedback.sentDate.toLocaleString() %></p>
                                                
                                            </div>
                                        <% }) %>
                                    </td>
                                    <td>
                                        <% feedback.allFeedbacks.forEach((individualFeedback,index) => { %>
                                            <div>
                                                <%if(index >0){ %>
                                                    <hr>
                                                <% } %>
                                                <p><%= individualFeedback.subject %></p>
                                                
                                            </div>
                                        <% }) %>
                                    </td>
                                    <td>
                                        <% feedback.allFeedbacks.forEach((individualFeedback,index) => { %>
                                            <div>
                                                <%if(index >0){ %>
                                                    <hr>
                                                <% } %>
                                                <p><%= individualFeedback.message %></p>
                                             
                                            </div>
                                        <% }) %>
                                       
                                    </td>
                                </tr>
                            <% }) %>
                        <% }) %>
                    </tbody>
                </table>
            <% }else{ %>
                <div class="col-lg-12" style="display: flex;justify-content: center;align-items: center; flex-direction: column;">
                    <img src="/images/theme/noData.jpg" alt="" width="50%">
                    <h1>No Feedbacks found</h1>
                </div>
                
            <% } %>
        </div>
    </div>
</div>



