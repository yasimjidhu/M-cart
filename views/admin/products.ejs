<!--header-->

<%- include('../user/partials/header') %>

<!--Navbar-->
<%-include('../admin/partials/nav') %>


<style>

  .product-image {
    max-width: 100px; 
    height: auto;
  }
</style>
<div class="button-div bg-danger ">
    

</div>

  <div class="container-fluid p-0">
    
    <div class="test">
      <div class="row">
        <div class="col-2 ">
            <%-include('../admin/partials/sidebar') %>
        </div>
        
        <div class="col-10 ">
            <div class="button-div d-flex justify-content-end">
                <button class="add-btn">
                    <a href="/admin/add-product" style="color: rgb(255, 255, 255); text-decoration: none;">Add Product</a>
                </button>
            </div>
            <%if(locals.error){%>
              <p style="color: red; text-align: center;" id="error"><%=error%></p>
            <%}%>
            <%if(locals.msg){%>
              <p style="color:green; text-align: center;" id="msg"><%=msg%></p>
            <%}%>

            
          <div class="table-responsive">
            <table class="table table-striped">
              <thead>
                <tr>
                  <th>No</th>
                  <th>Name</th>
                  <th>Category</th>
                  <th>Price</th>
                  <th>Stock</th>
                  <th>Brand</th>
                  <th>Images</th>
                  <th>Edit</th>
                  <th>Delete</th>
                </tr>
              </thead>
              <tbody>
                <% productsData.forEach((product, index) => { %>
                <tr>
                  <td><%= index + 1 %></td>
                  <td><%= product.productName %></td>
                  <td>
                    <% categories.forEach(category => { %>
                      <% if (category._id.toString() === product.category.toString()) { %>
                        <%= category.CategoryName %>
                      <% } %>
                    <% }); %>
                  </td>
                  <td>$<%= product.price %></td>
                  <td><%= product.stock %></td>
                  <td>
    
                        <%=product.brand.brandName%>

                    
                  </td>
                  
                  
                  <td>
                    <!-- Display the main product image if available -->
                        <img style="width: 50px; height: 50px;"
                            src="/uploads/<%= product.image[4]%>"
                            alt="Main Product Image"
                            class="product-image"
                        />

                </td>
                <td>
                  <a href="/admin/edit-product/<%= product._id %>">
                  <i class="fa-solid fa-pen-to-square" style="color: #000000;"></i>
                  </a>
              </td>
              <td>
                <form action="/admin/delete-product/<%=product._id %>" method="post" onsubmit="return confirmDelete('<%= product._id %>')">
                  <input type="hidden" name="productId" value="<%= product._id %>">
                  <button type="submit" style="border: none; background-color: transparent; cursor: pointer;">
                    <i class="fa-solid fa-trash" style="color: #000000;"></i>
                  </button>
                </form>
              </td>
                </tr>
                <% }); %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- Pagination -->
<div class="pagination">
  <% if (currentPage > 1) { %>
    <a class="next-btn text-white" href="/admin/products?page=<%= currentPage - 1 %>">Previous</a>
  <% } %>

  <% for (let i = 1; i <= totalPages; i++) { %>
    <% if (i === currentPage) { %>
      <span><%= i %></span>
    <% } else { %>
      <a class="second" href="/admin/products?page=<%= i %>"><%= i %></a>
    <% } %>
  <% } %>

  <% if (currentPage < totalPages) { %>
    <a class="next-btn text-white" href="/admin/products?page=<%= currentPage + 1 %>">Next</a>
  <% } %>
</div>


  <script>
    function confirmDelete(productId) {
      // Show a confirmation dialog
      const confirmation = confirm("Are you sure you want to delete this product?");
  
      // If user confirms, proceed with the deletion
      if (confirmation) {
        return true;
      } else {
        return false;
      }
    }

    setTimeout(() => {
      var error = document.querySelector('#error')
      var msg = document.querySelector('#msg')
      if(error){
        error.innerHTML=""
      }else if(msg){
        msg.innerHTML=""
      }
      
    }, 2000);
  </script>
 
  <!---footer-->
  <%-include('../user/partials/footer') %>

